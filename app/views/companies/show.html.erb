<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Logotype:</strong>
  <%= image_tag @company.logotype %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<p>
  <strong>Owner:</strong>
  <% @user = User.find(@company.company_owner) %>
  <%= link_to @user.name, @user %>
</p>

<% if @company.company_owner == current_user.id %>
    <%= button_to 'Edit', edit_company_path(@company), :method => :get, :class => "button_to" %> |<% end %>
<%= button_to 'Back', companies_path, :method => :get, :class => "button_to" %>
